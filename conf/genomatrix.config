params {

    // choose profile
    maps       = null
    simulate   = null
    matrix     = "RUN"
    annotate   = null
    gcp        = null
    lmm_exact  = null
    lmm        = null
    simulate_qtlloc = null
          mediation = false


    // misc
    // R_libpath   = "/projects/b1059/software/R_lib_3.6.0"
    eigen_mem = "10.GB"
}

process {
	executor = 'slurm'
    queue = 'genomicsguestA'
    clusterOptions = '-A b1042 -t 48:00:00 -e errlog.txt'
    container = 'andersenlab/nemascan:202204051340056178c4'

    // cores and memory
    withLabel: med {
        cpus = 4
    }

    withLabel: small {
        cpus = 1
    }

    withLabel: large {
        cpus = 6
        memory = params.eigen_mem

    }

    withLabel: xl {
        cpus = 4
    }

    withLabel: highmem {
        cpus = 4
        memory = "48 GB"
    }
}

singularity {
    pullTimeout = '30 min'

    enabled = true
    autoMounts = true
    cacheDir = "/projects/b1059/singularity"
}