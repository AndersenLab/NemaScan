singularity {

    enabled = true
    autoMounts = true

}

params {

    // choosing profiles
    maps       = "RUN"
    matrix     = null
    simulate   = null
    gcp        = null
    lmm_exact  = "RUN"
    lmm        = "RUN"
    annotate   = null
    simulate_qtlloc = null

    // misc
    R_libpath   = ""  
    eigen_mem = "10 GB"  

}

process {
	executor = 'slurm'
    queue = 'genomicsguestA'
    clusterOptions = '-A b1042 -t 48:00:00 -e errlog.txt'
    container = 'andersenlab/nemascan:v0.3'
}
