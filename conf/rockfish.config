/*
    Rockfish Configuration
*/

params {
    baseDir = "/vast/eande106"
    softwareDir = "/data/eande106/software"
    dataDir = "/vast/eande106/data"
    workDir = "/vast/eande106/work"
    platform = "Rockfish"
    anaconda = "anaconda/2022.05"
    gcp = false
}

executor {
    queueStatInterval = '5min'
    pollInterval = '1min'
    queueSize = 50
    submitRateLimit = '10sec'
}

process {
    executor = 'slurm'

    withLabel: vcf_to_geno_matrix {
        clusterOptions = '-A eande106 -e errlog.txt -N 1'
        queue = "parallel"
        time = "60.minute"
        cpus = 4
        memory = "16GB"
    }

    withLabel: chrom_eigen_variants {
        clusterOptions = '-A eande106 -e errlog.txt -N 1'
        queue = "parallel"
        time = "40.minute"
        cpus = 4
        memory = "16GB"
    }

    withLabel: prepare_gcta_files {
        array = 25
        clusterOptions = '-A eande106 -e errlog.txt -N 1'
        queue = "parallel"
        time = "40.minute"
        cpus = 4
        memory = "16GB"
    }

    withLabel: gcta_grm {
        array = 25
        clusterOptions = '-A eande106 -e errlog.txt -N 1'
        queue = "parallel"
        time = "40.minute"
        cpus = 4
        memory = "16GB"
    }

    withLabel: gcta_lmm_exact_mapping {
        array = 25
        clusterOptions = '-A eande106 -e errlog.txt -N 1'
        queue = "parallel"
        time = "40.minute"
        cpus = 4
        memory = "16GB"
    }

    withLabel: gcta_lmm_exact_mapping_nopca {
        array = 25
        clusterOptions = '-A eande106 -e errlog.txt -N 1'
        queue = "parallel"
        time = "40.minute"
        cpus = 4
        memory = "16GB"
    }

    withLabel: gcta_intervals_maps {
        array = 25
        clusterOptions = '-A eande106 -e errlog.txt -N 1'
        queue = "parallel"
        time = "40.minute"
        cpus = 4
        memory = "16GB"
    }

    withLabel: prep_ld_files {
        array = 25
        clusterOptions = '-A eande106 -e errlog.txt -N 1'
        queue = "parallel"
        time = "40.minute"
        cpus = 2
        memory = "8GB"
    }

    withLabel: gcta_fine_maps {
        array = 25
        clusterOptions = '-A eande106 -e errlog.txt -N 1'
        queue = "parallel"
        time = "40.minute"
        cpus = 4
        memory = "16GB"
    }

    withLabel: html_report_main {
        array = 25
        clusterOptions = '-A eande106 -e errlog.txt -N 1'
        queue = "parallel"
        time = "40.minute"
        cpus = 2
        memory = "8GB"
    }

    withLabel: local {
        executor = 'local'
        container = null
    }

    withLabel: xs {
        clusterOptions = '-A eande106 -t 2:00:00 -e errlog.txt -N 1'
        cpus = 1
        memory = "4G"
        queue = "parallel"
    }

    withLabel: sm {
        clusterOptions = '-A eande106 -t 2:00:00 -e errlog.txt -N 1'
        cpus = 2
        memory = "8G"
        queue = "parallel"
    }

    withLabel: md {
        clusterOptions = '-A eande106 -t 2:00:00 -e errlog.txt -N 1'
        cpus = 4
        memory = "16G"
        queue = "parallel"
    }

    withLabel: ml {
        clusterOptions = '-A eande106 -t 30:00:00 -e errlog.txt -N 1'
        cpus = 16
        memory = "64G"
        queue = "parallel"
    }

    withLabel: lg {
        clusterOptions = '-A eande106 -t 2:00:00 -e errlog.txt -N 1'
        cpus = 32
        memory = "128G"
        queue = "parallel"
    }

    withLabel: xl {
        clusterOptions = '-A eande106_bigmem -t 4:00:00 -e errlog.txt -N 1'
        cpus = 48
        memory = "1500G"
        queue = "bigmem"
    }

}

singularity {
    enabled = true
    autoMounts = true
    cacheDir = "${params.baseDir}/singularity"
    pullTimeout = '20 min'
    envWhitelist = "SLURMD_HOSTNAME,SLURM_JOB_NODELIST,SLURM_NODELIST,SLURM_STEP_NODELIST,SLURM_TOPOLOGY_ADDR"
}

workflow {
    workDir = "/scratch4/eande106"
}
