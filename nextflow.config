process.cache = 'deep'

singularity { singularity.enabled = true }

process {

    module='singularity/latest'

    container  = 'docker://faithman/cegwas2:latest'

}

params {
	species  	  = "elegans"
	wbb 	 	  = "WS276"
	data_dir 	  = "input_data/${species}"
	numeric_chrom = "input_data/all_species/rename_chromosomes"
	sparse_cut 	  = 0.01
}

profiles {

		mappings {

			params {

            maps 	   = "RUN"
            simulate   = null

		}		

	}

		simulations {

			params {

            maps 	      = null
            simulate      = "RUN"
            simulate_maf  = 0.05
            simulate_nqtl = "input_data/all_species/simulate_nqtl.csv"
            simulate_reps = 10

		}		

	}

		gcta_lmm {

			params {

            lmm 	   = "RUN"
            sparse_cut = 0.01
            lmm_maf    = 0.05

		}		

	}

		gcta_lmm_exact {

			params {

            lmm_exact  = "RUN"
            sparse_cut = 0.01
            maf		   = 0.05

		}		

	}

}


report {
    enabled = true
}