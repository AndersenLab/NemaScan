process.cache = 'deep'

nextflowVersion = '>=20.0'

import java.time.*
Date now = new Date()

process {

    conda = "/projects/b1059/software/conda_envs/cegwas2-nf_env"
    module = 'R/3.6.0'

    maxRetries=3

    executor = 'slurm'
    queue = 'genomicsguestA'
    clusterOptions = '-A b1042 -t 48:00:00 -e errlog.txt'

}

params {
    day                = now.format("yyyMMdd")
    timestamp          = now.format("yyyyMMdd-HH-mm-ss")
    out                = "Analysis_Results-${day}"
    tracedir           = "${out}"
}

profiles {

    annotations { includeConfig 'conf/annotations.config' }
    mappings { includeConfig 'conf/mappings.config' }
    standard { includeConfig 'conf/mappings.config' }
    simulations { includeConfig 'conf/simulations.config' }
    gcp { includeConfig 'conf/gcp.config' }

}

report {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_report.html"
}

timeline {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_timeline.html"
}

executor {
    queueSize = 1000
    submitRateLimit = 5
}
